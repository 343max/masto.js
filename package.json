{
  "name": "@lagunehq/core",
  "description": "Mastodon API client for browser and Node.js",
  "private": false,
  "version": "1.5.0",
  "author": "neetshin",
  "license": "AGPL-3.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "test": "npm-run-all test:*",
    "test:tslint": "tslint -c tslint.yml 'src/**/*.{ts,tsx}'",
    "test:prettier": "prettier -c 'src/**/*.{ts,tsx}'",
    "build": "tsc",
    "prepare": "yarn run test && yarn run build",
    "docs:build": "typedoc ./src --out ./docs --theme markdown --mdEngine gitbook --excludeNotExported",
    "docs:serve": "gitbook serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lagunehq/core.git"
  },
  "keywords": [
    "mastodon"
  ],
  "bugs": {
    "url": "https://github.com/lagunehq/core/issues"
  },
  "homepage": "https://github.com/lagunehq/core#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "eventemitter3": "^3.1.0",
    "http-link-header": "^1.0.0",
    "websocket": "^1.0.28"
  },
  "devDependencies": {
    "@types/http-link-header": "^0.6.2",
    "@types/node-fetch": "^2.1.2",
    "@types/query-string": "^6.1.1",
    "@types/websocket": "^0.0.40",
    "gitbook-cli": "^2.3.2",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-microsoft-contrib": "^6.0.0",
    "typedoc": "^0.13.0",
    "typedoc-plugin-markdown": "^1.1.18",
    "typescript": "^3.1.6"
  }
}
