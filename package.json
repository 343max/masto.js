{
  "name": "@lagunehq/core",
  "description": "Mastodon API client for browser and Node.js",
  "private": false,
  "version": "1.5.0",
  "author": "neetshin",
  "license": "AGPL-3.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "test": "npm-run-all test:*",
    "test:tslint": "tslint -c tslint.yml 'src/**/*.{ts,tsx}'",
    "test:prettier": "prettier -c 'src/**/*.{ts,tsx}'",
    "build": "tsc",
    "prepare": "yarn run test && yarn run build",
    "docs:build": "typedoc ./src --out ./docs --theme markdown --mdEngine gitbook --excludeNotExported",
    "docs:serve": "gitbook serve"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "tslint --fix",
        "prettier --write",
        "git add"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lagunehq/core.git"
  },
  "keywords": [
    "mastodon"
  ],
  "bugs": {
    "url": "https://github.com/lagunehq/core/issues"
  },
  "homepage": "https://github.com/lagunehq/core#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "eventemitter3": "^3.1.0",
    "form-data": "^2.3.3",
    "http-link-header": "^1.0.2",
    "semver": "^5.6.0",
    "ts-optchain": "^0.1.3",
    "websocket": "^1.0.28"
  },
  "devDependencies": {
    "@types/form-data": "^2.2.1",
    "@types/http-link-header": "^0.6.2",
    "@types/query-string": "^6.3.0",
    "@types/semver": "^5.5.0",
    "@types/websocket": "^0.0.40",
    "gitbook-cli": "^2.3.2",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-microsoft-contrib": "^6.1.0",
    "typedoc": "^0.14.2",
    "typedoc-plugin-markdown": "^1.1.27",
    "typescript": "^3.3.4000",
    "typescript-tslint-plugin": "^0.3.1"
  }
}
