{
  "name": "masto",
  "description": "Mastodon API client for JavaScript, TypeScript, Node.js, browsers",
  "private": false,
  "version": "3.0.0",
  "author": "Ryo Igarashi <n33t5hin@gmail.com>",
  "license": "AGPL-3.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "browser": "./dist/browser.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "npm-run-all test:*",
    "test:jest": "jest --coverage --config=jest.config.js",
    "test:eslint": "eslint -c .eslintrc.json ./src/**/*.ts",
    "test:spellcheck": "cspell '{src,examples}/**/*.{ts,tsx,js,json,md}'",
    "build": "rollup -c rollup.config.js",
    "prepublishOnly": "yarn run test && yarn run build",
    "docs:build": "typedoc ./src && touch ./docs/.nojekyll"
  },
  "dependencies": {
    "@types/ws": "^7.2.1",
    "axios": "^0.19.2",
    "change-case": "^4.1.1",
    "eventemitter3": "^4.0.0",
    "isomorphic-form-data": "^2.0.0",
    "isomorphic-ws": "^4.0.1",
    "normalize-url": "^5.0.0",
    "semver": "^7.1.2",
    "ws": "^7.2.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.9.8",
    "@types/semver": "^7.1.0",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "codecov": "^3.6.5",
    "cspell": "^4.0.55",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-simple-import-sort": "^5.0.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rollup": "^1.32.0",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "ts-jest": "^25.2.1",
    "typedoc": "^0.16.9",
    "typescript": "3.7.5"
  },
  "files": [
    "README.md",
    "dist",
    "!**/__tests__",
    "!**/__mocks__"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neet/masto.js.git"
  },
  "keywords": [
    "mastodon"
  ],
  "bugs": {
    "url": "https://github.com/neet/masto.js/issues"
  },
  "homepage": "https://github.com/neet/masto.js#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "cspell",
      "git add"
    ]
  }
}
